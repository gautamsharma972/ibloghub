@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
     Layout = "~/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}                           

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="font-weight-bold spanborder"><span>Change Password</span></h4>
            <hr />
            <partial name="_StatusMessage" for="StatusMessage" />
            <form id="change-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="Input.OldPassword"></label>
                        <input asp-for="Input.OldPassword" placeholder="Old Password" class="form-control" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="Input.NewPassword"></label>
                        <input asp-for="Input.NewPassword" placeholder="New Password" class="form-control" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" placeholder="Confirm new Password" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>                      
                </div>
                <button type="submit" class="btn btn-primary">Update password</button>
            </form>
        </div>
    </div>    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}