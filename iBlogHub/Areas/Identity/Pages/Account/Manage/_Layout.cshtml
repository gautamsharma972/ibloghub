<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="description" content="@(ViewBag.MetaDescription?? "Write, Motivate, Learn - iBlogHub")" />
    <meta name="keywords" content="@(ViewBag.KeyWords??"ibloghub, bloghub, blog, learn, motivate, share, earn")" />
    <meta name="author" content="@(ViewBag.Author?? "Gautam Sharma, Shakyens")" />
    <meta name="description" content="@(ViewBag.MetaDescription?? "Learn, Motivate, Inspire - iBlogHub")" />
    <title>@ViewData["Title"] - iBlogHub</title>

    @RenderSection("Seo", required: false)

    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700|Source+Sans+Pro:400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <link rel="stylesheet" href="~/lib/css/main.css">
    <link rel="stylesheet" href="~/lib/css/theme.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <meta name="robots" content="max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <link rel="canonical" href="http://www.ibloghub.com/" />
    <meta property="og:locale" content="en_GB" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="iBlogHub &gt; Write, Motivate, Learn" />
    <meta property="og:description" content="Write, Motivate, Learn" />
    <meta property="og:url" content="http://www.ibloghub.com/" />
    <meta property="og:site_name" content="iBlogHub" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:description" content="Write, Motivate, Learn" />
    <meta name="twitter:title" content="iBlogHub &gt; Write, Motivate, Learn" />
    @*<meta name="twitter:site" content="@@iBloghub" />*@
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
    <script data-ad-client="ca-pub-0986464081027217" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
</head>

<body class="@(ViewBag.isHomePage==true?"homefirstpage":"")">
    <nav class="topnav navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Href("~/")"><strong>iBlogHub</strong></a>
            <partial name="_SearchHeader" />
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarColor02">
                <ul class="navbar-nav ml-auto d-flex align-items-center">
                    <partial name="_MenuHeader" />
                </ul>
            </div>
        </div>
    </nav>
    <main role="main" class="site-content">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <partial name="_UserInfo" />
                    <partial name="_ManageNav" />
                </div>
                <div class="col-sm-8">
                    <div class="border-left">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <div id="loader" class="loader"></div>
    </main>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

    <script src="~/lib/js/theme.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script src="~/js/notify.js"></script>
    <script src="~/js/prettify.js"></script>
    <footer class="bg-white border-top p-3 text-muted small">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div>
                    <span class="navbar-brand mr-2 mb-0"><strong>iBlogHub</strong></span>
                    <span>
                        Copyright ©
                        @DateTime.Now.Year
                    </span>

                    <a class="text-dark ml-1" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    <a class="text-dark ml-1" target="_blank" href="@Href("~/About")">About</a>

                </div>
                <div>
                    Designed by <a target="_blank" class="text-dark font-weight-bold" href="https://www.shakyens.com/"> Shakyens </a>.
                    <a class="text-dark ml-1" asp-controller="Home" asp-action="Feedback">Feedback</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/js/bootstrap.js"></script>
    <script src="~/lib/js/theme.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <ejs-scripts></ejs-scripts>
    @RenderSection("Scripts", required: false)
</body>
</html>