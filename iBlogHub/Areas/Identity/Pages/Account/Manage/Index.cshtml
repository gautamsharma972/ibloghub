@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "~/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="font-weight-bold spanborder">
                <span>Edit Profile</span>
            </h4>             
            <partial name="_StatusMessage" model="Model.StatusMessage" />
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="Input.FirstName"></label>
                        <input placeholder="First Name" asp-for="Input.FirstName" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Input.LastName"></label>
                        <input placeholder="Last Name" asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="Username"></label>
                        <input placeholder="Username" asp-for="Username" class="form-control" disabled />

                    </div>
                    <div class="col-md-6">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input placeholder="Phone Number" asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="Input.Dob"></label>
                        <input asp-for="Input.Dob" type="date" class="form-control" />
                        <span asp-validation-for="Input.Dob" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Input.Gender"></label><br />
                        <input asp-for="Input.Gender" value="@iBlogHub.Helpers.Enums.Gender.Male" type="radio" /> <label>@iBlogHub.Helpers.Enums.Gender.Male</label> &nbsp;&nbsp;
                        <input asp-for="Input.Gender" value="@iBlogHub.Helpers.Enums.Gender.Female" type="radio" /> <label>@iBlogHub.Helpers.Enums.Gender.Female</label>
                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="Input.About"></label>
                        <textarea asp-for="Input.About" placeholder="Something about you..." maxlength="250" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="Input.About" class="text-danger"></span>
                    </div>
                </div>

                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}