@model string

@if (!String.IsNullOrEmpty(Model))
{
    @if (Model.StartsWith("Error"))
    {
        <h1 class="mb-3">Mail confirmation</h1>
        <p class="mb-3 lead text-danger">
            Some error occurred while verifying your Email Address. Please try again later.
        </p>
    }
    else
    {
        <h1 class="mb-3">Thanks!</h1>
        <p class="mb-3 lead">
            Thank you for confirming your account. You can now login
        </p>
        <a asp-page="./Login" class="btn btn-dark">Login now</a>
    }

