@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="keywords" content="@(ViewBag.KeyWords??"ibloghub, bloghub, blog, learn, motivate, share, earn")" />
    <meta name="author" content="@(ViewBag.Author?? "Gautam Sharma, Shakyens")" />
    <meta name="theme-color" content="black" />
    <meta name="description" content="@(ViewBag.MetaDescription?? "Learn, Motivate, Inspire - iBlogHub")" />
    <title>@ViewData["Title"] - iBlogHub</title>

    @RenderSection("Seo", required: false)

    <link rel="shortcut icon" type="image/x-icon" href="~/lib/images/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700|Source+Sans+Pro:400,600,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <link rel="stylesheet" href="~/lib/css/main.css">
    <link rel="stylesheet" href="~/lib/css/theme.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <meta name="robots" content="max-snippet:-1, max-image-preview:large, max-video-preview:-1" />

    <link rel="canonical" href="http://www.ibloghub.com/" />
    <meta property="og:locale" content="en_GB" />

    @{
        string currentUrl = Context.Request.Scheme + "://" + Context.Request.Host + Context.Request.Path;
    }
    <meta property="og:url" content="@currentUrl" />
    <meta property="og:site_name" content="iBlogHub" />
    <meta name="twitter:card" content="@ViewBag.MetaDescription" />
    <meta name="twitter:description" content="@ViewBag.MetaDescription" />
    <meta name="twitter:title" content="@ViewData["Title"]" />
    <meta name="twitter:image" content="@ViewBag.ogImage" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
    <link href="~/css/animate.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script type="application/ld+json">
        {
        "@@context": "http://schema.org",
        "@@type": "WebSite",
        "url": "http://www.ibloghub.com/",
        "potentialAction": {
        "@@type": "SearchAction",
        "target": "http://www.ibloghub.com/Home/Search?q={search_term_string}",
        "query-input": "required name=search_term_string"
        }

        }
    </script>
    <script type="application/ld+json">
        {
        "@@context": "http://schema.org",
        "@@type": "WebSite",
        "url": "http://www.ibloghub.com/",
        "logo": "http://www.ibloghub.com/images/sitelogo.png"
        }
    </script>

    <script data-ad-client="ca-pub-0986464081027217" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    @RenderSection("GoogleAds", required: false)
    @if (ViewBag.isHomePage != true)
    {
        <style type="text/css">
            @@media (min-width: 1200px) {
                .container {
                    max-width: 1217px;
                }
            }
        </style>
    }
    @RenderSection("Styles", required: false)

</head>

<body class="@(ViewBag.isHomePage==true?"homefirstpage":"")" id="flux">
    <nav class="topnav navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Href("~/")"><strong>iBlogHub</strong></a>
            <partial name="_SearchHeader" />
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarColor02">
                <ul class="navbar-nav ml-auto d-flex align-items-center">
                    <partial name="_MenuHeader" />
                </ul>
            </div>
        </div>
    </nav>

    <div id="lunrsearchresults">
        <ul class="mb-0"></ul>
    </div>
    <main role="main" class="site-content">
        @RenderBody()
        <div class="modal fade" id="modalWelcome">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content minh100" style="background-image:url('/images/background-1.jpg');
background-repeat:no-repeat; background-size:cover; background-position:top;">
                    <div class="modal-body">
                        <div class="col-sm-12 col-md-10 offset-md-1 col-lg-10 offset-lg-1">
                            <div class="text-center pt-5 pb-5">
                                <h4 class="text-dark font-weight-bold">
                                    Writing makes us clear our thoughts,
                                    Why not to share and feel light!
                                    <br />
                                    <br />Create a quote or share something inspirational.
                                    <br />Be your own Author.<br />Join now, it's free!
                                </h4>
                                <p>&nbsp;</p>
                                <a href="@Href("~/Identity/Account/Register")" class="btn btn-primary">Get Started</a>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Not Now</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div id="loader" class="loader"></div>
    </main>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

    <script src="~/lib/js/theme.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script src="~/js/notify.js"></script>
    <script src="~/js/prettify.js"></script>
    <footer class="bg-white border-top p-3 text-muted small">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div>
                    <span class="navbar-brand mr-2 mb-0"><strong>iBlogHub</strong></span>
                    <span>
                        Copyright ©
                        @DateTime.Now.Year
                    </span>

                    <a class="text-dark ml-1" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    @*<a class="text-dark ml-1" target="_blank" href="@Href("~/About")">About</a>*@

                </div>
                <div>
                    @*@await Html.PartialAsync("_SelectLanguagePartial")*@
                    Designed by <a target="_blank" class="text-dark font-weight-bold" href="https://www.shakyens.com/"> Shakyens </a>.
                    <a class="text-dark ml-1" asp-controller="Home" asp-action="Feedback">Feedback</a>
                </div>
            </div>
        </div>

    </footer>
    <script src="~/lib/js/bootstrap.js"></script>
    <script src="~/lib/js/theme.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <ejs-scripts></ejs-scripts>
    @if (!User.Identity.IsAuthenticated)
    {
        if (ViewBag.ShowMessage !=false)
        {
            <script type="text/javascript">
                $(document).ready(function () {
                    setTimeout(fnShowPopup, 60000);
                });
                function fnShowPopup() {   
                    $("#modalWelcome").modal('show');
                }

            </script>
        }

    }
    @RenderSection("Scripts", required: false)
</body>

</html>
